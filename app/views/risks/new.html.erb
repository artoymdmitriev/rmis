<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Добавить новый риск</h1>
      <%= form_for @risk do |f| %>
          <div class="field">
            <%= f.label 'Название' %><br>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label 'Описание' %><br>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label 'Категория' %><br>
            <%= f.select :category, options_for_select(Risk.categories.map {|k, v| [v.humanize.capitalize, k]}, class: 'form-control') %>
          </div>

          <div class="field">
            <%= f.label 'Дата' %><br>
            <%= f.date_field :occured_at, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label 'Уровень опасности' %><br>
            <%= f.number_field :danger_rate, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label 'Источник риска' %><br>
            <%= f.select :origin_type, options_for_select(Risk.types.map {|k, v| [v.humanize.capitalize, k]}, class: 'form-control') %>
          </div>
          <br>
          <%= f.submit "Создать", class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="card" style="padding: 10px; margin: 8px;">
          <div class="card-block">
            <h1>Импортировать данные из файла</h1>
            <h4>CSV / XLS / XLSX</h4>
            <%= form_tag import_risks_path, multipart: true do %>
                <%= file_field_tag :file %><br>
                <%= submit_tag "Импортировать", class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>