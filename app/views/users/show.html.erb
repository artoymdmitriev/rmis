<h1>Мой профиль</h1>
<div class="col-md-3">
  <% if @user.avatar.nil? %>
    <%= image_tag 'default_avatars/man128.png', class: 'img-responsive' %>
  <% else %>
    <%= image_tag @user.avatar, class: 'img-responsive' %>
  <% end %>
</div>
<div class="col-md-6">
  <div>
    <h1><%= @user.name %></h1>
  </div>
  <div>
    <h1><%= @user.surname %></h1>
  </div>
</div>
